<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="true">
        <layer-list>
            <item android:state_pressed="true" android:left="4.0dip" android:right="4.0dip">
                <shape>
                    <solid android:color="@color/primary" />
