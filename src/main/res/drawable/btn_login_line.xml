<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="4.0dip" />
            <solid android:color="@color/disable" />
            <stroke android:width="1.0dip" android:color="@color/disable" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="4.0dip" />
            <solid android:color="#ff027b03" />
            <stroke android:width="1.0dip" android:color="#ff027b03" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="4.0dip" />
            <solid android:color="#ff027b03" />
            <stroke android:width="1.0dip" android:color="#ff027b03" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="4.0dip" />
            <solid android:color="#ff00be02" />
            <stroke android:width="1.0dip" android:color="#ff00be02" />
        </shape>
    </item>
</selector>