<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/com_garena_beepay_radius_x_large" />
            <solid android:color="@color/color_opaque_white_20" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/com_garena_beepay_radius_x_large" />
            <solid android:color="@color/color_opaque_white_20" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/com_garena_beepay_radius_x_large" />
            <stroke android:width="1.0dip" android:color="@color/color_opaque_white_60" />
            <solid android:color="@color/com_garena_beepay_bg_color_transparent" />
        </shape>
    </item>
</selector>