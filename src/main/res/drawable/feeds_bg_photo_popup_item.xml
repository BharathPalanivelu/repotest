<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <gradient android:startColor="#ffefefef" android:endColor="#ffefefef" android:angle="270.0" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#ffe1e1e1" android:endColor="#ffe1e1e1" android:angle="270.0" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#ffe1e1e1" android:endColor="#ffe1e1e1" android:angle="270.0" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="#ffffffff" android:endColor="#ffffffff" android:angle="270.0" />
            <corners android:bottomLeftRadius="2.0dip" android:bottomRightRadius="2.0dip" />
        </shape>
    </item>
</selector>